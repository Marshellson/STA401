# sujet 3
############
n<-100
mu<-0
sig<-sqrt(1/12)
par(mfrow=c(1,2))
qqnorm(e1,ylim=c(min(0,mu-3*sig),max(1,mu+3*sig)))
abline(v=0,h=0)
abline(mean(e1),sd(e1),col="red")
qqnorm(e2,ylim=c(min(0,mu-3*sig),max(1,mu+3*sig)))
abline(mean(e2),sd(e2),col="red")
abline(v=0,h=0)

#sujet 4

abline(v=0,h=0)
abline(mean(e3),sd(e3),col="red")
qqnorm(e4,ylim=c(-4,8))
abline(mean(e4),sd(e4),col="red")
abline(v=0,h=0)

#sujet 5
##############
par(mfrow=c(1,2))
qqnorm(e5,ylim=c(min(e5),max(e5)))
abline(v=0,h=0)
abline(mean(e5),sd(e5),col="red")
qqnorm(e6,ylim=c(min(e5),max(e5)))
abline(mean(e6),sd(e6),col="red")
abline(v=0,h=0)

